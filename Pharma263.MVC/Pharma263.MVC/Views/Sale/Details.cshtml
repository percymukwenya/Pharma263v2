@model Pharma263.MVC.DTOs.Sales.SaleDetailsDto
@{
    ViewBag.Title = "Sale Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="wraper container-fluid">
    <div class="page-title">
        <h3 class="title">Sale Details - #@Model.Id</h3>
        <a href="@Url.Action("Index", "Sale")" class="btn btn-default pull-right">
            <i class="fa fa-arrow-left"></i> Back to Sales
        </a>
        <div class="clearfix"></div>
    </div>
    
    <div class="row">
        <div class="col-lg-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Sale Information</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="dl-horizontal">
                                <dt>Sale ID:</dt>
                                <dd>#@Model.Id</dd>
                                
                                <dt>Customer:</dt>
                                <dd><strong>@Model.CustomerName</strong></dd>
                                
                                <dt>Sale Date:</dt>
                                <dd>@Model.SalesDate.ToString("MMM dd, yyyy")</dd>
                                
                                <dt>Payment Method:</dt>
                                <dd>@Model.PaymentMethod</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="dl-horizontal">
                                <dt>Sale Status:</dt>
                                <dd>
                                    @if (Model.SaleStatus == "Paid")
                                    {
                                        <span class="label label-success">@Model.SaleStatus</span>
                                    }
                                    else if (Model.SaleStatus == "Pending")
                                    {
                                        <span class="label label-warning">@Model.SaleStatus</span>
                                    }
                                    else if (Model.SaleStatus.Contains("Credit"))
                                    {
                                        <span class="label label-info">@Model.SaleStatus</span>
                                    }
                                    else
                                    {
                                        <span class="label label-default">@Model.SaleStatus</span>
                                    }
                                </dd>
                                
                                <dt>Total:</dt>
                                <dd>$@Model.Total.ToString("N2")</dd>
                                
                                <dt>Discount:</dt>
                                <dd>$@Model.Discount.ToString("N2")</dd>
                                
                                <dt>Grand Total:</dt>
                                <dd><strong>$@Model.GrandTotal.ToString("N2")</strong></dd>
                            </dl>
                        </div>
                    </div>
                    
                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <div class="row">
                            <div class="col-md-12">
                                <dt>Notes:</dt>
                                <dd>@Model.Notes</dd>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title">Actions</h3>
                </div>
                <div class="panel-body">
                    <div class="btn-group-vertical btn-block" role="group">
                        <a href="@Url.Action("SaleInvoice", "Sale", new { saleId = Model.Id })" 
                           target="_blank" class="btn btn-primary">
                            <i class="fa fa-print"></i> Print Invoice
                        </a>
                        
                        <a href="@Url.Action("Process", "Return", new { saleId = Model.Id })" 
                           class="btn btn-warning">
                            <i class="fa fa-refresh"></i> Process Return
                        </a>
                        
                        <a href="@Url.Action("DeleteSale", "Sale", new { saleId = Model.Id })" 
                           onclick="return confirm('Are you sure you want to delete this sale? This action cannot be undone.')"
                           class="btn btn-danger">
                            <i class="fa fa-trash"></i> Delete Sale
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Sale Items</h3>
                </div>
                <div class="panel-body">
                    @if (Model.Items != null && Model.Items.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover table-striped">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Medicine</th>
                                        <th>Unit Price</th>
                                        <th>Quantity</th>
                                        <th>Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{int itemNumber = 1;}
                                    @foreach (var item in Model.Items)
                                    {
                                        <tr>
                                            <td>@itemNumber</td>
                                            <td>
                                                <strong>@item.MedicineName</strong>
                                            </td>
                                            <td>$@item.Price.ToString("N2")</td>
                                            <td>@item.Quantity</td>
                                            <td>$@item.Amount.ToString("N2")</td>
                                        </tr>
                                        itemNumber++;
                                    }
                                </tbody>
                                <tfoot>
                                    <tr class="info">
                                        <td colspan="4" class="text-right"><strong>Subtotal:</strong></td>
                                        <td><strong>$@Model.Total.ToString("N2")</strong></td>
                                    </tr>
                                    @if (Model.Discount > 0)
                                    {
                                        <tr class="warning">
                                            <td colspan="4" class="text-right"><strong>Discount:</strong></td>
                                            <td><strong>-$@Model.Discount.ToString("N2")</strong></td>
                                        </tr>
                                    }
                                    <tr class="success">
                                        <td colspan="4" class="text-right"><strong>Grand Total:</strong></td>
                                        <td><strong>$@Model.GrandTotal.ToString("N2")</strong></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning text-center">
                            <h4><i class="fa fa-exclamation-triangle"></i> No Items</h4>
                            <p>This sale has no items associated with it.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>