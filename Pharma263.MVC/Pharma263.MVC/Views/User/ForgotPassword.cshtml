@model string

@{
    ViewBag.Title = "Forgot Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="wraper container-fluid">
    <div class="row">
        <div class="col-lg-10 col-md-offset-1">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>Forgot Password</h4>
                </div>
                <div class="panel-body">
                    <form asp-action="ForgotPassword" method="post">
                        <div class="text-danger">@ViewData["ErrorMessage"]</div>
                        <div class="form-group">
                            <label for="email" class="control-label">Email</label>
                            <input type="email" id="email" name="email" class="form-control" required value="@Model" />
                        </div>

                        <div class="form-group mt-3">
                            <button type="submit" class="btn btn-primary">Send Reset Instructions</button>
                            <a asp-action="UserList" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}