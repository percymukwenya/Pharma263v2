@model dynamic

<div class="report-card @(ViewBag.CardClass ?? "")" data-report-id="@(ViewBag.ReportId ?? "")">
    <div class="card shadow-sm h-100">
        @if (!string.IsNullOrEmpty(ViewBag.CardHeader as string))
        {
            <div class="card-header bg-gradient-primary text-white">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">
                        @if (!string.IsNullOrEmpty(ViewBag.Icon as string))
                        {
                            <i class="@ViewBag.Icon me-2" aria-hidden="true"></i>
                        }
                        @ViewBag.CardHeader
                    </h5>
                    @if (ViewBag.ShowLastUpdated == true)
                    {
                        <small class="last-updated">
                            <i class="fas fa-clock me-1"></i>
                            <span id="last-updated-@(ViewBag.ReportId ?? "default")">Just now</span>
                        </small>
                    }
                </div>
            </div>
        }

        <div class="card-body">
            <!-- Loading State -->
            <div class="loading-state d-none" id="loading-@(ViewBag.ReportId ?? "default")">
                <div class="d-flex justify-content-center align-items-center" style="min-height: 200px;">
                    <div class="spinner-border spinner-border-lg text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <span class="ms-3 text-muted">Generating report...</span>
                </div>
            </div>

            <!-- Error State -->
            <div class="error-state d-none" id="error-@(ViewBag.ReportId ?? "default")">
                <div class="alert alert-danger" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <div>
                            <strong>Error Loading Report</strong>
                            <p class="mb-0 mt-1">
                                <span class="error-message">Unable to load report data. Please try again.</span>
                            </p>
                        </div>
                    </div>
                    <button type="button" class="btn btn-outline-danger btn-sm mt-2" onclick="retryReport('@(ViewBag.ReportId ?? "default")')">
                        <i class="fas fa-redo me-1"></i>Retry
                    </button>
                </div>
            </div>

            <!-- Content Area -->
            <div class="report-content" id="content-@(ViewBag.ReportId ?? "default")">
                @if (Model != null)
                {
                    @Html.Raw(Model.ToString())
                }
            </div>
        </div>

        @if (ViewBag.ShowActions == true)
        {
            <div class="card-footer bg-light">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="report-actions">
                        @if (ViewBag.ShowRefresh == true)
                        {
                            <button type="button" class="btn btn-outline-primary btn-sm me-2" onclick="refreshReport('@(ViewBag.ReportId ?? "default")')">
                                <i class="fas fa-sync-alt me-1"></i>Refresh
                            </button>
                        }
                    </div>
                    <div class="export-actions">
                        @if (ViewBag.ShowExport == true)
                        {
                            <div class="btn-group" role="group">
                                <button type="button" class="btn btn-outline-secondary btn-sm" onclick="exportReport('@(ViewBag.ReportId ?? "default")', 'pdf')">
                                    <i class="fas fa-file-pdf me-1"></i>PDF
                                </button>
                                <button type="button" class="btn btn-outline-secondary btn-sm" onclick="exportReport('@(ViewBag.ReportId ?? "default")', 'excel')">
                                    <i class="fas fa-file-excel me-1"></i>Excel
                                </button>
                                <button type="button" class="btn btn-outline-secondary btn-sm" onclick="exportReport('@(ViewBag.ReportId ?? "default")', 'csv')">
                                    <i class="fas fa-file-csv me-1"></i>CSV
                                </button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
.report-card {
    transition: all 0.3s ease;
}

.report-card:hover {
    transform: translateY(-2px);
}

.bg-gradient-primary {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.loading-state .spinner-border-lg {
    width: 3rem;
    height: 3rem;
}

.last-updated {
    opacity: 0.9;
    font-size: 0.8rem;
}

.report-actions .btn-sm,
.export-actions .btn-sm {
    font-size: 0.8rem;
    padding: 0.375rem 0.75rem;
}

.error-state .alert {
    margin-bottom: 0;
}
</style>