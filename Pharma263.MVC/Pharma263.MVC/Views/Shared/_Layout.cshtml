<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pharmacy Management System</title>

    <!-- Google Fonts -->
    <link href='httpS://fonts.googleapis.com/css?family=Roboto:400,100,100italic,300,300italic,400italic,500,500italic,700,700italic,900,900italic' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="~/Content/adminFront/assets/plugins/font-awesome/css/font-awesome.css" />
    <link rel="stylesheet" href="~/Content/adminFront/assets/plugins/ionicon/css/ionicons.min.css" />
    <!-- Include jQuery UI CSS -->
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <!-- Include Toastr CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="~/Content/adminFront/assets/plugins/datatables/jquery.dataTables.min.css">
    <!-- Pharma263 CSS - Bundled and Minified -->
    <link rel="stylesheet" href="~/css/bundle.css" asp-append-version="true" />
    <!-- Pharma263 CSS Modules - Feature-specific styles for better caching -->
    <link rel="stylesheet" href="~/css/modules-bundle.css" asp-append-version="true" />

</head>
<body>
    <partial name="_Notification" />
    <header class="modern-top-nav container-fluid navbar-fixed-top" role="banner">
        <!-- Mobile Menu Toggle -->
        <button type="button" class="mobile-nav-toggle navbar-toggle" aria-label="Toggle navigation menu" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <div class="hamburger-icon">
                <span class="line line-1"></span>
                <span class="line line-2"></span>
                <span class="line line-3"></span>
            </div>
        </button>

        <!-- Right Navigation Section -->
        <nav class="top-nav-right" role="navigation">
            <ul class="nav-items">
                <!-- Quick Actions -->
                <li class="nav-item">
                    <a href="@Url.Action("Index", "Dashboard")" class="nav-link" title="Dashboard" aria-label="Go to Dashboard">
                        <i class="fas fa-chart-line" aria-hidden="true"></i>
                        <span class="nav-text">Dashboard</span>
                    </a>
                </li>

                <!-- Notifications (placeholder for future) -->
                <li class="nav-item notifications">
                    <a href="#" class="nav-link notification-link" title="Notifications" aria-label="View notifications">
                        <i class="fas fa-bell" aria-hidden="true"></i>
                        <span class="notification-badge">0</span>
                    </a>
                </li>

                <!-- User Menu Dropdown -->
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item user-menu">
                        <a class="nav-link user-dropdown-toggle" href="#" role="button" aria-haspopup="true" aria-expanded="false" data-toggle="dropdown">
                            <div class="user-avatar">
                                <i class="fas fa-user-circle" aria-hidden="true"></i>
                            </div>
                            <div class="user-info">
                                <span class="username">@User.Identity.Name</span>
                                <small class="user-role">Administrator</small>
                            </div>
                            <i class="fas fa-chevron-down dropdown-arrow" aria-hidden="true"></i>
                        </a>
                        <ul class="dropdown-menu user-dropdown-menu" role="menu">
                            <li role="none">
                                <a href="@Url.Action("Profile", "User")" class="dropdown-item" role="menuitem">
                                    <i class="fas fa-user" aria-hidden="true"></i>
                                    <span>My Profile</span>
                                </a>
                            </li>
                            <li role="none">
                                <a href="@Url.Action("StoreSetting", "Admin")" class="dropdown-item" role="menuitem">
                                    <i class="fas fa-cog" aria-hidden="true"></i>
                                    <span>Settings</span>
                                </a>
                            </li>
                            <li role="none">
                                <a href="@Url.Action("ChangeOwnPassword", "User")" class="dropdown-item" role="menuitem">
                                    <i class="fas fa-key" aria-hidden="true"></i>
                                    <span>Change Password</span>
                                </a>
                            </li>
                            <li class="dropdown-divider" role="separator"></li>
                            <li role="none">
                                <a href="@Url.Action("Logout", "Auth")" class="dropdown-item logout-item" role="menuitem">
                                    <i class="fas fa-sign-out-alt" aria-hidden="true"></i>
                                    <span>Sign Out</span>
                                </a>
                            </li>
                        </ul>
                    </li>
                }
            </ul>
        </nav>
    </header>
    @Html.Partial("_Navigation")


    <!-- End Aside -->


    <section class="content">
        @RenderBody()

        <footer class="footer">

            <div class="pull-right hidden-xs">
                Made with <i class="fa fa-heart pulse"></i>
            </div>
            <!-- Default to the left -->
            <strong>Copyright &copy; @DateTime.Now.Year Pharma263.</strong> All rights reserved.
        </footer>
    </section>

    <!-- Modern jQuery and core libraries -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    
    <!-- Bootstrap JavaScript for dropdown functionality -->
    <script src="~/Content/adminFront/assets/js/bootstrap.min.js"></script>
    
    <!-- DataTables -->
    <script src="~/Content/adminFront/assets/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Content/adminFront/assets/plugins/datatables/dataTables.bootstrap.js"></script>
    
    <!-- Optional plugins -->
    <script src="~/Content/adminFront/assets/js/jquery.nicescroll.js"></script>
    
    <!-- Pharma263 Core Library - Bundled and Minified -->
    <script src="~/js/bundle.js" asp-append-version="true"></script>
    <script src="~/js/site2.js" asp-append-version="true"></script>

    <!-- Include Toastr JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @RenderSection("scripts", required: false)
    <script type="text/javascript">
        $(document).ready(function () {
            // Initialize DataTable only if the plugin is available and element exists
            if ($.fn.DataTable && $('#datatable').length > 0) {
                $('#datatable').DataTable({
                    "paging": true,
                    "lengthChange": false,
                    "searching": true,
                    "info": false,
                    "autoWidth": false,
                "dom": '<lf<t>ip>',
                language: {
                    searchPlaceholder: "Search anything"
                }
                });
            }

            toastr.options.timeOut = 3000;

            // Note: Global AJAX error handler for auth failures is in pharma263.core.js
            // No need for duplicate handler here
        });
    </script>

</body>
</html>
