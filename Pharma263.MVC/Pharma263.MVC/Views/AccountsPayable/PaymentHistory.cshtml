@model IEnumerable<Pharma263.MVC.DTOs.PaymentMade.GetPaymentMadeListDto>
@{
    ViewData["Title"] = "Payment History";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="wraper container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Payment History for @(Model.FirstOrDefault()?.Supplier ?? "Supplier")</h3>
                </div>
                <div class="panel-body">
                    @if (!Model.Any())
                    {
                        <div class="alert alert-info">
                            No payment records found for this supplier.
                        </div>
                    }
                    else
                    {
                        <table class="table table-striped table-hover" id="paymentTable">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.PaymentDate)</th>
                                    <th>@Html.DisplayNameFor(model => model.AmountPaid)</th>
                                    <th>@Html.DisplayNameFor(model => model.PaymentMethod)</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.PaymentDate)</td>
                                        <td>@Html.DisplayFor(modelItem => item.AmountPaid)</td>
                                        <td>@Html.DisplayFor(modelItem => item.PaymentMethod)</td>
                                        <td>
                                            <a asp-action="PaymentDetails" asp-route-id="@item.Id" class="btn btn-info btn-xs">
                                                <i class="fa fa-eye"></i> Details
                                            </a>
                                            <a asp-action="EditPayment" asp-route-id="@item.Id" class="btn btn-warning btn-xs">
                                                <i class="fa fa-edit"></i> Edit
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Total:</th>
                                    <th>@Model.Sum(m => m.AmountPaid).ToString("C2")</th>
                                    <th colspan="2"></th>
                                </tr>
                            </tfoot>
                        </table>
                    }

                    <div class="form-group">
                        <a asp-action="Index" class="btn btn-default">Back to Accounts</a>
                        <a asp-action="CapturePayment" asp-route-accountPayableId="@Model.FirstOrDefault()?.AccountPayableId" class="btn btn-primary">
                            <i class="fa fa-plus"></i> Add New Payment
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#paymentTable').DataTable({
                "order": [[0, "desc"]], // Sort by payment date (newest first)
                "responsive": true
            });
        });
    </script>
}