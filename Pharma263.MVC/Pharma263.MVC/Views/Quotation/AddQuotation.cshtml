@{
    ViewBag.Title = "Add Quotation ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@* Inline styles moved to /css/modules/common-overrides.css and forms.css *@
<link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />

<style>
    /* Improved Form Layout - More Spacious */
    .form-spacious {
        max-width: 1400px;
        margin: 20px auto;
        padding: 0 20px;
    }
    .form-header {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        color: white;
        padding: 20px 30px;
        border-radius: 8px 8px 0 0;
        margin-bottom: 0;
    }
    .form-header h2 {
        margin: 0;
        font-size: 24px;
        font-weight: 600;
    }
    .form-body-spacious {
        background: white;
        padding: 30px;
        border-radius: 0 0 8px 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }
    .add-item-panel {
        background: #f8f9fa;
        border: 2px solid #e9ecef;
        border-radius: 8px;
        padding: 25px;
        margin-bottom: 25px;
    }
    .add-item-panel h3 {
        margin: 0 0 20px 0;
        font-size: 18px;
        font-weight: 600;
        color: #495057;
    }
    .form-row-inline {
        display: grid;
        grid-template-columns: 2fr 1fr 1fr 150px;
        gap: 15px;
        align-items: end;
    }
    @@media (max-width: 992px) {
        .form-row-inline {
            grid-template-columns: 1fr;
        }
    }
    .product-list-section {
        margin-top: 30px;
    }
    .totals-section {
        background: #f8f9fa;
        border-radius: 8px;
        padding: 20px;
        margin-top: 20px;
    }
    .form-group label {
        font-weight: 600;
        color: #495057;
        margin-bottom: 8px;
    }
    .form-control {
        border-radius: 6px;
        border: 1px solid #ced4da;
        padding: 10px 12px;
    }
    .btn-add-item {
        height: 42px;
        margin-top: 0;
        border-radius: 6px;
        font-weight: 600;
    }
</style>

<div class="form-spacious">
    <div class="form-header">
        <h2>Create New Quotation</h2>
    </div>
    <div class="form-body-spacious">
        <!-- Customer and Date Section -->
        <div class="row" style="margin-bottom: 25px;">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="Customer">Customer</label>
                    <select id="Customer" class="form-control" onchange="blankme(this.id)">
                        <option value="">Select Customer</option>
                    </select>
                    <small id="error_Customer" class="form-text error_msg">Select Customer from list</small>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label for="SDate">Quotation Date</label>
                    @Html.TextBox("SDate", null, new { @class = "form-control mydatepicker", @placeholder = "Select Quotation Date", onchange = "blankme(this.id)" })
                    <small id="error_SDate" class="form-text error_msg">Quotation Date is Required</small>
                </div>
            </div>
        </div>

        <!-- Add Item Section - Horizontal Layout -->
        <div class="add-item-panel">
            <h3>Add Item</h3>
            <form role="form">
                <div class="form-row-inline">
                    <div class="form-group">
                        <label for="SMedicine">Medicine</label>
                        <select id="SMedicine" class="form-control">
                            <option value="">Select Medicine</option>
                        </select>
                        <small id="error_SMedicine" class="form-text error_msg">Select Medicine from list</small>
                    </div>

                    <div class="form-group">
                        <label for="SQuantity">Quantity</label>
                        @Html.TextBox("SQuantity", null, new { @class = "form-control", @type = "number", @placeholder = "Qty", @min = "0" })
                        <small id="error_SQuantity" class="form-text error_msg">Quantity is required</small>
                        <small id="error_SQuantitycheck" class="form-text error_msg">Quantity Must be less than stock</small>
                    </div>

                    <div class="form-group">
                        <label for="SDiscountPercent">Discount %</label>
                        @Html.TextBox("SDiscountPercent", null, new { @class = "form-control", @type = "number", @placeholder = "0", @min = "0", @max = "100", @step = "0.01" })
                        <small id="error_SDiscountPercent" class="form-text error_msg">Discount must be between 0-100%</small>
                    </div>

                    <div class="form-group">
                        <button type="submit" id="SaleaddToList" class="btn btn-info btn-block btn-add-item">
                            <i class="fa fa-plus"></i> Add Item
                        </button>
                    </div>
                </div>

                <div class="form-group" id="medicineDetails" style="margin-top: 15px;">
                    <!-- Medicine details will be populated here -->
                </div>
            </form>
        </div>

        <!-- Product List Section -->
        <div class="product-list-section">
            <h3 style="margin-bottom: 15px; font-weight: 600; color: #495057;">Product List</h3>
            <div class="table-responsive">
                <table class="table table-hover table-bordered" id="detailsTable">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col" style="width: 50px;">#</th>
                            <th scope="col">Name</th>
                            <th scope="col" style="width: 120px;">Unit Price</th>
                            <th scope="col" style="width: 120px;">Discount %</th>
                            <th scope="col" style="width: 100px;">Qty</th>
                            <th scope="col" style="width: 140px;">Amount</th>
                            <th scope="col" style="width: 80px;"></th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                    <tfoot>
                        <tr class="font-weight-bold">
                            <td colspan="5" class="text-right"><strong>Subtotal:</strong></td>
                            <td><strong id="SSubTotal"></strong></td>
                            <td></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <small id="error_SSubTotal" class="form-text error_msg">At least add one item</small>
        </div>

        <!-- Quotation Details and Totals Section -->
        <div class="totals-section">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="SNotes">Notes</label>
                        @Html.TextArea("SNotes", new { @class = "form-control", @rows = "3", @placeholder = "Enter any additional notes for the quotation" })
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="SDiscount">Discount Amount</label>
                                @Html.TextBox("SDiscount", 0, new { @class = "form-control", @Value = "0", @type = "number", @placeholder = "0.00", onchange = "SDiscountAmount()" })
                                <small id="error_SDiscount" class="form-text error_msg">Discount can't be empty</small>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="SGrandTotal">Grand Total</label>
                                <h4 id="SGrandTotal" class="form-control" style="background: #e9ecef; font-weight: bold; color: #28a745;"></h4>
                                <small id="error_SGrandTotal" class="form-text error_msg">Total is empty</small>
                            </div>
                        </div>
                    </div>

                    <div class="form-group" style="margin-top: 15px;">
                        <input id="QBtnSave" class="btn btn-success btn-lg btn-block" type="submit" value="Save Quotation" style="height: 50px; font-size: 18px; font-weight: 600;" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>

    <script src="~/Scripts/App/sales.js"></script>
    <script type="text/javascript">
        function disableButton() {
            document.getElementById("QBtnSave").disabled = true;
        }
    </script>
}
