@model Pharma263.MVC.DTOs.User.AddRoleDto
@{
    ViewBag.Title = "Create New Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="wraper container-fluid">
    <div class="page-title">
        <h3 class="title">Create New Role</h3>
    </div>
    
    <div class="row">
        <div class="col-lg-8 col-md-offset-2">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Role Information</h3>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("CreateRole", "Role", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        
                        <div class="form-group">
                            @Html.LabelFor(x => x.RoleName, new { @class = "control-label" })
                            @Html.TextBoxFor(x => x.RoleName, new { @class = "form-control", @placeholder = "Enter role name (e.g., Manager, Cashier, etc.)" })
                            @Html.ValidationMessageFor(x => x.RoleName, "", new { @class = "text-danger" })
                            <small class="text-muted">Role names should be descriptive and unique (e.g., Manager, Cashier, Pharmacist)</small>
                        </div>

                        <div class="alert alert-info">
                            <strong>Note:</strong> After creating the role, you can assign users to it from the User Management section.
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-success">
                                <i class="fa fa-plus"></i> Create Role
                            </button>
                            <a href="@Url.Action("Index", "Role")" class="btn btn-default">
                                <i class="fa fa-arrow-left"></i> Back to Roles
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>