@model List<ABCAnalysisViewModel>
@{
    ViewData["Title"] = "ABC Inventory Analysis";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>ABC Inventory Analysis</h2>
        <a href="@Url.Action("Index", "Report")" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to Reports
        </a>
    </div>

    <div class="row">
        <!-- Parameters Card -->
        <div class="col-md-3 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-3">Analysis Parameters</h5>
                    <form id="reportForm">
                        <div class="mb-3">
                            <label for="asOfDate" class="form-label">As of Date</label>
                            <input type="date" class="form-control" id="asOfDate" name="asOfDate" required>
                        </div>
                        <div class="d-grid gap-2">
                            <button type="button" onclick="generateReport('preview')" class="btn btn-primary">
                                <i class="fas fa-search me-2"></i>Generate Analysis
                            </button>
                            <button type="button" onclick="generateReport('pdf')" class="btn btn-secondary">
                                <i class="fas fa-file-pdf me-2"></i>Export PDF
                            </button>
                            <button type="button" onclick="generateReport('csv')" class="btn btn-secondary">
                                <i class="fas fa-file-csv me-2"></i>Export CSV
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Legend Card -->
            <div class="card shadow-sm mt-3">
                <div class="card-body">
                    <h5 class="card-title mb-3">Category Legend</h5>
                    <div class="d-flex align-items-center mb-2">
                        <div class="bg-success rounded-circle me-2" style="width: 20px; height: 20px;"></div>
                        <span>Category A (High Value)</span>
                    </div>
                    <div class="d-flex align-items-center mb-2">
                        <div class="bg-warning rounded-circle me-2" style="width: 20px; height: 20px;"></div>
                        <span>Category B (Medium Value)</span>
                    </div>
                    <div class="d-flex align-items-center">
                        <div class="bg-danger rounded-circle me-2" style="width: 20px; height: 20px;"></div>
                        <span>Category C (Low Value)</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Results Container -->
        <div class="col-md-9">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div id="reportResults">
                        <!-- Charts -->
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <canvas id="pieChart"></canvas>
                            </div>
                            <div class="col-md-6">
                                <canvas id="paretoChart"></canvas>
                            </div>
                        </div>

                        <!-- Summary Statistics -->
                        <div class="row mb-4" id="summaryStats">
                            <div class="col-md-4">
                                <div class="card bg-success text-white">
                                    <div class="card-body">
                                        <h6>Category A Items</h6>
                                        <h3 id="categoryACount">0</h3>
                                        <p id="categoryAValue">$0</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card bg-warning">
                                    <div class="card-body">
                                        <h6>Category B Items</h6>
                                        <h3 id="categoryBCount">0</h3>
                                        <p id="categoryBValue">$0</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card bg-danger text-white">
                                    <div class="card-body">
                                        <h6>Category C Items</h6>
                                        <h3 id="categoryCCount">0</h3>
                                        <p id="categoryCValue">$0</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Detailed Data Table -->
                        <div class="table-responsive">
                            <table class="table table-striped table-hover" id="detailedData">
                                <thead>
                                    <tr>
                                        <th scope="col">Product Code</th>
                                        <th scope="col">Product Name</th>
                                        <th scope="col">Annual Usage Value</th>
                                        <th scope="col">% of Total</th>
                                        <th scope="col">Cumulative %</th>
                                        <th scope="col">Category</th>
                                        <th scope="col">Current Stock</th>
                                        <th scope="col">Reorder Point</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Similar JavaScript structure to the previous example,
        // but with ABC Analysis specific chart and table handling
    </script>
}