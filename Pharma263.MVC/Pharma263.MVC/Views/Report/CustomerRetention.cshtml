@{
    ViewData["Title"] = "Customer Retention Analysis";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Customer Retention Analysis</h2>
        <a href="@Url.Action("Index", "Report")" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to Reports
        </a>
    </div>

    <div class="row">
        <!-- Parameters Card -->
        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-3">Report Parameters</h5>
                    <form id="reportForm">
                        <div class="mb-3">
                            <label for="startDate" class="form-label">Start Date</label>
                            <input type="date" class="form-control" id="startDate" name="startDate" required>
                        </div>
                        <div class="mb-3">
                            <label for="endDate" class="form-label">End Date</label>
                            <input type="date" class="form-control" id="endDate" name="endDate" required>
                        </div>
                        <div class="d-grid gap-2">
                            <button type="button" onclick="generateReport('preview')" class="btn btn-primary">
                                <i class="fas fa-search me-2"></i>Generate Report
                            </button>
                            <button type="button" onclick="generateReport('pdf')" class="btn btn-secondary">
                                <i class="fas fa-file-pdf me-2"></i>Export PDF
                            </button>
                            <button type="button" onclick="generateReport('csv')" class="btn btn-secondary">
                                <i class="fas fa-file-csv me-2"></i>Export CSV
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Metrics Legend -->
            <div class="card shadow-sm mt-3">
                <div class="card-body">
                    <h5 class="card-title">Metrics Legend</h5>
                    <div class="mt-2">
                        <small class="d-block mb-2"><strong>Retention Rate:</strong> Percentage of customers who remain active</small>
                        <small class="d-block mb-2"><strong>Churn Rate:</strong> Percentage of customers who become inactive</small>
                        <small class="d-block"><strong>Repeat Purchase:</strong> Customers making multiple purchases</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Results Container -->
        <div class="col-md-9">
            <!-- Summary Stats -->
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="card bg-primary text-white">
                        <div class="card-body">
                            <h6 class="card-title">Total Customers</h6>
                            <h3 id="totalCustomers">0</h3>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-success text-white">
                        <div class="card-body">
                            <h6 class="card-title">Retention Rate</h6>
                            <h3 id="avgRetentionRate">0%</h3>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-warning">
                        <div class="card-body">
                            <h6 class="card-title">Churn Rate</h6>
                            <h3 id="avgChurnRate">0%</h3>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-info text-white">
                        <div class="card-body">
                            <h6 class="card-title">Repeat Purchase</h6>
                            <h3 id="repeatPurchaseRate">0%</h3>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Cohort Analysis -->
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="card-title">Customer Cohort Analysis</h5>
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Cohort Month</th>
                                    <th>Initial Customers</th>
                                    <th>Active Customers</th>
                                    <th>Retention Rate</th>
                                    <th>Churn Rate</th>
                                    <th>Repeat Purchase Rate</th>
                                    <th>Avg. Cost Per Retention</th>
                                </tr>
                            </thead>
                            <tbody id="cohortData">
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function generateReport(format) {
            const startDate = document.getElementById('startDate').value;
            const endDate = document.getElementById('endDate').value;

            if (!startDate || !endDate) {
                alert('Please select both start and end dates');
                return;
            }

            if (format === 'preview') {
                $.post('@Url.Action("CustomerRetention")',
                    { startDate, endDate },
                    function (data) {
                        if (data && data.result) {
                            displayReport(data.result);
                        }
                    });
            } else if (format === 'pdf') {
                window.location.href = `@Url.Action("DownloadCustomerRetentionPDF")?startDate=${startDate}&endDate=${endDate}`;
            } else if (format === 'csv') {
                window.location.href = `@Url.Action("DownloadCustomerRetentionCSV")?startDate=${startDate}&endDate=${endDate}`;
            }
        }

        function displayReport(data) {
            updateSummaryCards(data);
            displayCohortAnalysis(data.cohorts);
        }

        function updateSummaryCards(data) {
            document.getElementById('totalCustomers').textContent = data.totalCustomers.toLocaleString();
            document.getElementById('avgRetentionRate').textContent = `${data.averageRetentionRate.toFixed(1)}%`;
            document.getElementById('avgChurnRate').textContent = `${data.averageChurnRate.toFixed(1)}%`;
            document.getElementById('repeatPurchaseRate').textContent = `${data.repeatPurchaseRate.toFixed(1)}%`;
        }

        function displayCohortAnalysis(cohorts) {
            const tbody = document.getElementById('cohortData');
            tbody.innerHTML = '';

            cohorts.forEach(cohort => {
                tbody.innerHTML += `
                        <tr>
                            <td>${new Date(cohort.cohortMonth).toLocaleDateString('en-US', { year: 'numeric', month: 'long' })}</td>
                            <td>${cohort.initialCustomerCount.toLocaleString()}</td>
                            <td>${cohort.activeCustomers.toLocaleString()}</td>
                            <td>${cohort.retentionRate.toFixed(1)}%</td>
                            <td>${cohort.customerChurnRate.toFixed(1)}%</td>
                            <td>${cohort.repeatPurchaseRate.toFixed(1)}%</td>
                            <td>$${cohort.customerRetentionCost.toLocaleString()}</td>
                        </tr>
                    `;
            });
        }
    </script>
}