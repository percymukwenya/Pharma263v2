            // Update CLV insights if available
            if (data.clvInsights) {
                const top20Element = document.getElementById('top20Revenue');
                if (top20Element && data.clvInsights.top20Revenue) {
                    top20Element.textContent = `${data.clvInsights.top20Revenue.toFixed(0)}%`;
                }
                
                const clvGrowthElement = document.getElementById('clvGrowthRate');
                if (clvGrowthElement && data.clvInsights.growthRate) {
                    clvGrowthElement.textContent = `${data.clvInsights.growthRate.toFixed(0)}%`;
                }
                
                const potentialElement = document.getElementById('optimizationPotential');
                if (potentialElement && data.clvInsights.optimizationPotential) {
                    potentialElement.textContent = `$${(data.clvInsights.optimizationPotential / 1000000).toFixed(1)}M`;
                }
            }
            
            // Update behavior insights
            if (data.behaviorInsights) {
                const avgOrderElement = document.getElementById('avgOrderValue');
                if (avgOrderElement && data.behaviorInsights.avgOrderValue) {
                    avgOrderElement.textContent = `$${data.behaviorInsights.avgOrderValue.toLocaleString()}`;
