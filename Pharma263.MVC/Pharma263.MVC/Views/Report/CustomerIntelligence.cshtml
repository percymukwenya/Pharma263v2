function showToast(message, type) {
    // Create and show Bootstrap toast notification
    const toast = document.createElement('div');
    toast.className = `toast align-items-center text-white bg-${type} border-0`;
    toast.innerHTML = `
        <div class="d-flex">
            <div class="toast-body">${message}</div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
        </div>
    `;
    
    document.body.appendChild(toast);
    const bsToast = new bootstrap.Toast(toast);
    bsToast.show();
    
    setTimeout(() => {
        document.body.removeChild(toast);
    }, 5000);
}

// Error handling functions
function showCustomerIntelligenceError(message) {
    // Show error in KPI cards
    ['totalCustomers', 'avgClv', 'churnRisk', 'engagementScore'].forEach(id => {
        const element = document.getElementById(id);
        if (element) {
            element.innerHTML = '<i class="fas fa-exclamation-triangle text-danger"></i> Error';
        }
    });
    
    // Show error toast
    showToast(message, 'danger');
    
    // Add retry button
    const retryButton = document.createElement('button');
    retryButton.className = 'btn btn-outline-primary mt-3';
    retryButton.innerHTML = '<i class="fas fa-refresh me-1"></i>Retry Loading Data';
    retryButton.onclick = () => {
        window.location.reload();
    };
    
    const dashboardHeader = document.querySelector('.dashboard-header .container-fluid');
    if (dashboardHeader && !dashboardHeader.querySelector('.btn-outline-primary')) {
        dashboardHeader.appendChild(retryButton);
    }
}

function showChartError(chartId, message) {
    const canvas = document.getElementById(chartId);
    if (canvas) {
        const parent = canvas.parentElement;
        parent.innerHTML = `
            <div class="text-center py-5">
                <i class="fas fa-exclamation-triangle text-danger fa-3x mb-3"></i>
                <h5 class="text-muted">${message}</h5>
                <button class="btn btn-outline-primary btn-sm mt-2" onclick="refreshAllData()">
                    <i class="fas fa-refresh me-1"></i>Retry
                </button>
            </div>
        `;
    }
}

function showTableError(tableId, message) {
    const table = document.getElementById(tableId);
    if (table) {
        table.innerHTML = `
            <tr>
                <td colspan="100%" class="text-center py-4">
                    <i class="fas fa-exclamation-triangle text-danger fa-2x mb-2"></i>
                    <div class="text-muted">${message}</div>
                    <button class="btn btn-outline-primary btn-sm mt-2" onclick="refreshAllData()">
