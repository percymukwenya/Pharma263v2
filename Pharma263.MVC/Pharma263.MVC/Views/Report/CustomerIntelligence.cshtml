        count: row.customerCount,
        clv: `$${row.avgClv.toLocaleString()}`,
        frequency: `${row.orderFrequency}/month`,
        revenue: `${row.revenueContribution}%`,
        growth: `${row.growthRate >= 0 ? '+' : ''}${row.growthRate.toFixed(1)}%`,
