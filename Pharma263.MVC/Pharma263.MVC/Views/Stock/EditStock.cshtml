@model Pharma263.Integration.Api.Models.Request.UpdateStockRequest
@{
    ViewData["Title"] = "EditStock";
    Layout = "~/Views/Shared/_Layout.cshtml";

    //string formattedExpiryDate = Model.ExpiryDate.ToString("dd/MM/yyyy");
}
<link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
@* Inline styles moved to /css/modules/common-overrides.css *@

<div class="wraper container-fluid">
    <div class="page-title">
        <h1 class="title">Stock </h1>
    </div>
    <div class="row">
        <div class="col-lg-10 col-md-offset-1">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="panel-title">Update Stock Item</h2>
                </div>
                <div class="panel-body">
                    <form id="updateStockForm">
                        @Html.AntiForgeryToken()
                        <input type="hidden" id="Id" name="Id" value="@Model.Id" />
                        <input type="hidden" id="MedicineId" name="MedicineId" value="@Model.MedicineId" />

                        <div class="form-group">
                            <label for="MedicineName">Medicine Name</label>
                            <input type="text" class="form-control" id="MedicineName" name="MedicineName" value="@Model.MedicineName" readonly />
                        </div>

                        <div class="row">
                            <div class="col-lg-6 col-md-6">
                                <div class="form-group">
                                    <label for="BatchNo">Batch No</label>
                                    <input type="text" class="form-control" id="BatchNo" name="BatchNo" value="@Model.BatchNo" />
                                    <span class="text-danger" id="BatchNoError"></span>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6">
                                <div class="form-group">
                                    <label for="ExpiryDate">Expiry Date</label>
                                    <input type="text" class="form-control datepicker" id="ExpiryDate" name="ExpiryDate"
                                           value="@Model.ExpiryDate.ToString("yyyy-MM-dd")" />
                                    <span class="text-danger" id="ExpiryDateError"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-4 col-md-6">
                                <div class="form-group">
                                    <label for="BuyingPrice">Buying Price</label>
                                    <input type="number" step="0.01" class="form-control" id="BuyingPrice" name="BuyingPrice"
                                           value="@Model.BuyingPrice.ToString("0.00", System.Globalization.CultureInfo.InvariantCulture)" />
                                    <span class="text-danger" id="BuyingPriceError"></span>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-6">
                                <div class="form-group">
                                    <label for="SellingPrice">Selling Price</label>
                                    <input type="number" step="0.01" class="form-control" id="SellingPrice" name="SellingPrice"
                                           value="@Model.SellingPrice.ToString("0.00", System.Globalization.CultureInfo.InvariantCulture)" />
                                    <span class="text-danger" id="SellingPriceError"></span>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-6">
                                <div class="form-group">
                                    <label for="TotalQuantity">Total Quantity</label>
                                    <input type="number" class="form-control" id="TotalQuantity" name="TotalQuantity" value="@Model.TotalQuantity" />
                                    <span class="text-danger" id="TotalQuantityError"></span>
                                </div>
                            </div>
                        </div>

                        <button type="button" id="updateStockBtn" class="btn btn-purple">Update</button>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>

@section scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.7.1/js/bootstrap-datepicker.js"></script>
@*@Scripts.Render("~/bundles/App")*@
    <!-- Include jQuery library -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Include jQuery UI library -->
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>
    <script src="~/Scripts/App/App.js"></script>
    <script type="text/javascript">
                $(document).ready(function() {
            // Initialize datepicker
            $('.datepicker').datepicker({
                format: 'yyyy-mm-dd',
                autoclose: true
            });

            // Handle form submission
            $('#updateStockBtn').click(function() {
                // Clear previous error messages
                $('.text-danger').text('');

                // Get form data and convert to JSON
                var stockData = {
                    Id: parseInt($('#Id').val()),
                    MedicineId: parseInt($('#MedicineId').val()),
                    MedicineName: $('#MedicineName').val(),
                    BatchNo: $('#BatchNo').val(),
                    ExpiryDate: $('#ExpiryDate').val(),
                    BuyingPrice: parseFloat($('#BuyingPrice').val()),
                    SellingPrice: parseFloat($('#SellingPrice').val()),
                    TotalQuantity: parseInt($('#TotalQuantity').val())
                };

                // Validate data before sending
                var isValid = true;

                if (isNaN(stockData.BuyingPrice)) {
                    $('#BuyingPriceError').text('Buying Price must be a number');
                    isValid = false;
                }

                if (isNaN(stockData.SellingPrice)) {
                    $('#SellingPriceError').text('Selling Price must be a number');
                    isValid = false;
                }

                if (!isValid) {
                    return;
                }

                // Send AJAX request
                $.ajax({
                    url: '@Url.Action("UpdateStockJson", "Stock")',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(stockData),
                    beforeSend: function(xhr) {
                        // Add anti-forgery token
                        xhr.setRequestHeader("RequestVerificationToken",
                            $('input:hidden[name="__RequestVerificationToken"]').val());
                    },
                    success: function(response) {
                        if (response.success) {
                            // Show success message
                            toastr.success('Stock updated successfully');

                            // Redirect to index page after delay
                            setTimeout(function() {
                                window.location.href = '@Url.Action("Index", "Stock")';
                            }, 1500);
                        } else {
                            // Show error message
                            toastr.error(response.message || 'Failed to update stock');
                        }
                    },
                    error: function(xhr) {
                        if (xhr.status === 400) {
                            // Handle validation errors
                            var errors = xhr.responseJSON;
                            if (errors && errors.errors) {
                                // Display field-specific errors
                                for (var field in errors.errors) {
                                    $('#' + field + 'Error').text(errors.errors[field][0]);
                                }
                                toastr.error('Please fix the validation errors');
                            } else {
                                toastr.error('Invalid data submitted');
                            }
                        } else {
                            toastr.error('An error occurred while updating stock');
                        }
                    }
                });
            });
        });
    </script>
}