@using Pharma263.MVC.Enums;
@using System.ComponentModel;
@model Pharma263.Integration.Api.Models.Request.UpdateCustomerRequest
@{
    ViewBag.Title = "Edit Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";    
}

<div class="wraper container-fluid">
    <div class="page-title">
        <h3 class="title">Customer </h3>
    </div>
    <div class="row">
        <div class="col-lg-10 col-md-offset-1">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Update Customer</h3>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("EditCustomer", "Customer", FormMethod.Post, new { @class = "ajax-form", data_ajax = "true", data_validate = "true", data_ajax_options = "{\"showSuccess\": true, \"redirect\": \"/Customer/CustomerList\"}" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(x=>x.Id)
                        <div class="form-group">
                            @Html.LabelFor(x => x.Name)
                            @Html.TextBoxFor(x => x.Name, null, new { @class = "form-control", @placeholder = "Enter Customer Name", @required = "required" })
                            @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
                        </div>

                        <div class="row">
                            <div class="col-lg-6 col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(x => x.Email)
                                    @Html.TextBoxFor(x => x.Email, null, new { @class = "form-control", @placeholder = "Enter Email", @type = "email" })
                                    @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(x => x.Phone)
                                    @Html.TextBoxFor(x => x.Phone, null, new { @class = "form-control", @placeholder = "Enter Phone Number", data_rule_phone = "true" })
                                    @Html.ValidationMessageFor(x => x.Phone, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(x => x.PhysicalAddress)
                            @Html.TextAreaFor(x => x.PhysicalAddress, new { @class = "form-control", @rows = "3", @placeholder = "Address" })
                            @Html.ValidationMessageFor(x => x.PhysicalAddress, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(x => x.DeliveryAddress)
                            @Html.TextAreaFor(x => x.DeliveryAddress, new { @class = "form-control", @rows = "3", @placeholder = "Delivery Address" })
                            @Html.ValidationMessageFor(x => x.DeliveryAddress, "", new { @class = "text-danger" })
                        </div>

                        <div class="row">
                            <div class="col-lg-6 col-md-6">
                                <div class="form-group">
                                    <label for="CustomerType"> Customer Type : </label>
                                    <select id="CustomerType" name="CustomerTypeId" class="form-control">
                                        <option value="">Select Customer Type</option>
                                    </select>
                                    <small id="error_CustomerType" class="form-text error_msg">Select Customer Type</small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-6 col-md-6">
                                <div class="form-group" id="MCAZLicenceGroup">
                                    @Html.LabelFor(x => x.MCAZLicence)
                                    @Html.TextBoxFor(x => x.MCAZLicence, null, new { @class = "form-control", @placeholder = "MCAZ License", data_rule_mcaz = "true" })
                                    @Html.ValidationMessageFor(x => x.MCAZLicence, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6">
                                <div class="form-group" id="HPALicenseGroup">
                                    @Html.LabelFor(x => x.HPALicense)
                                    @Html.TextBoxFor(x => x.HPALicense, null, new { @class = "form-control", @placeholder = "HPA License", data_rule_hpa = "true" })
                                    @Html.ValidationMessageFor(x => x.HPALicense, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-6 col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(x => x.VATNumber)
                                    @Html.TextBoxFor(x => x.VATNumber, null, new { @class = "form-control", @placeholder = "VAT Number", data_rule_vat = "true" })
                                    @Html.ValidationMessageFor(x => x.VATNumber, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-purple btn-lg">
                                Update Customer
                            </button>
                            <a href="@Url.Action("Index", "Customer")" class="btn btn-default btn-lg">
                                Cancel
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>

    </div>
</div>

@section scripts {
    <script type="text/javascript">
        $(document).ready(function() {
            // Enable real-time validation
            if (window.Pharma263) {
                window.Pharma263.enableRealtimeValidation($('.ajax-form'));
            }

            // Load customer types
            $.ajax({
                type: "GET",
                url: "/Admin/GetCustomerType",
                datatype: "json",
                success: function (data) {
                    var customerTypeId = @Html.Raw(Json.Serialize(Model.CustomerTypeId));
                    $.each(data, function (index, value) {
                        $("#CustomerType").append(
                            '<option value="' + value.id + '">' + value.name + '</option>'
                        );
                    });

                    // Set the selected option based on customerTypeId
                    if (customerTypeId) {
                        $("#CustomerType").val(customerTypeId);
                    }
                },
            });

            // Auto-format customer name to title case
            $('#Name').on('blur', function() {
                const value = $(this).val();
                if (value) {
                    $(this).val(value.toLowerCase().replace(/\b\w/g, l => l.toUpperCase()));
                }
            });

            // Validate and format license numbers
            $('#MCAZLicence').on('blur', function() {
                const value = $(this).val().toUpperCase();
                $(this).val(value);
                
                if (value && window.Pharma263Utils) {
                    if (!window.Pharma263Utils.validateLicense(value, 'MCAZ')) {
                        if (window.Pharma263) {
                            window.Pharma263.showToast('Please check MCAZ license format', 'warning');
                        }
                    }
                }
            });

            // Validate HPA license
            $('#HPALicense').on('blur', function() {
                const value = $(this).val().toUpperCase();
                $(this).val(value);
                
                if (value && window.Pharma263Utils) {
                    if (!window.Pharma263Utils.validateLicense(value, 'HPA')) {
                        if (window.Pharma263) {
                            window.Pharma263.showToast('Please check HPA license format', 'warning');
                        }
                    }
                }
            });

            // Validate VAT number
            $('#VATNumber').on('blur', function() {
                const value = $(this).val().toUpperCase();
                $(this).val(value);
                
                if (value && window.Pharma263Utils) {
                    if (!window.Pharma263Utils.validateLicense(value, 'VAT')) {
                        if (window.Pharma263) {
                            window.Pharma263.showToast('Please check VAT number format', 'warning');
                        }
                    }
                }
            });

            // Auto-format addresses
            $('#PhysicalAddress, #DeliveryAddress').on('blur', function() {
                const value = $(this).val();
                if (value) {
                    // Capitalize first letter of each line
                    const formatted = value.split('\n').map(line => 
                        line.charAt(0).toUpperCase() + line.slice(1)
                    ).join('\n');
                    $(this).val(formatted);
                }
            });

            // Success callback for form submission
            $(document).on('ajaxSuccess', '.ajax-form', function(event, xhr, settings) {
                if (settings.url.includes('EditCustomer')) {
                    console.log('Customer updated successfully');
                }
            });
        });
    </script>
}
